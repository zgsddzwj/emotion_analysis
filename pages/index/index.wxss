.index-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 20rpx;
  padding-top: calc(30rpx + constant(safe-area-inset-top));
  padding-top: calc(30rpx + env(safe-area-inset-top));
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(180deg, #faf8f5 0%, #f5f0ea 100%);
}

.index-header {
  margin-bottom: 24rpx;
  position: relative;
  flex-shrink: 0;
}

.welcome-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(232, 213, 196, 0.15);
  border: 1px solid rgba(232, 213, 196, 0.3);
  position: relative;
  overflow: hidden;
}

.welcome-card::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #e8d5c4 0%, #d4c4b0 100%);
  border-radius: 20rpx 0 0 20rpx;
}

.welcome-icon {
  font-size: 56rpx;
  flex-shrink: 0;
  animation: gentleFloat 3s ease-in-out infinite;
}

@keyframes gentleFloat {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-8rpx);
  }
}

.welcome-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.welcome-title {
  font-size: 32rpx;
  color: #5c4a3a;
  font-weight: 600;
  line-height: 1.4;
}

.welcome-subtitle {
  font-size: 24rpx;
  color: #8b7355;
  line-height: 1.5;
  opacity: 0.8;
}

.history-link {
  position: absolute;
  top: 32rpx;
  right: 28rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.history-link-text {
  font-size: 22rpx;
  color: #8b7355;
}

/* 非情绪内容提醒 */
.reminder-section {
  margin-bottom: 24rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.reminder-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8d5c4;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.2);
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  position: relative;
}

.reminder-card::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #e8d5c4 0%, #d4c4b0 100%);
  border-radius: 16rpx 0 0 16rpx;
}

.reminder-content {
  flex: 1;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.reminder-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.reminder-text {
  flex: 1;
  font-size: 28rpx;
  color: #5c4a3a;
  line-height: 1.7;
}

.reminder-close {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(232, 213, 196, 0.2);
  transition: all 0.3s ease;
}

.reminder-close:active {
  background-color: rgba(232, 213, 196, 0.4);
  transform: scale(0.9);
}

.close-icon {
  font-size: 40rpx;
  color: #8b7355;
  line-height: 1;
  font-weight: 300;
}

.input-section {
  width: 100%;
  height: 420rpx;
  margin-bottom: 24rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.input-wrapper {
  width: 100%;
  height: 420rpx !important;
  min-height: 420rpx !important;
  max-height: 420rpx !important;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.1);
  border: 1px solid rgba(232, 213, 196, 0.3);
  flex-shrink: 0;
  box-sizing: border-box;
  overflow: hidden;
}

.input-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(232, 213, 196, 0.2);
  flex-shrink: 0;
  height: 60rpx;
}

.label-icon {
  font-size: 28rpx;
}

.label-text {
  font-size: 26rpx;
  color: #8b7355;
  font-weight: 500;
}

.textarea-wrapper {
  width: 100%;
  height: 320rpx !important;
  min-height: 320rpx !important;
  max-height: 320rpx !important;
  position: relative;
  flex-shrink: 0;
  overflow: hidden;
  display: block;
  box-sizing: border-box;
}

.emotion-input {
  width: 100% !important;
  height: 320rpx !important;
  min-height: 320rpx !important;
  max-height: 320rpx !important;
  background-color: transparent !important;
  border: none !important;
  padding: 0 !important;
  font-size: 28rpx;
  color: #5c4a3a;
  line-height: 1.8;
  box-sizing: border-box !important;
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  overflow-y: auto !important;
  resize: none !important;
  z-index: 2;
}

.custom-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 0;
  pointer-events: none;
  z-index: 1;
}

.placeholder-line {
  display: block;
  width: 100%;
  font-size: 28rpx;
  color: #c4b5a3;
  line-height: 1.8;
  margin-bottom: 0;
}

.input-footer {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1px solid rgba(232, 213, 196, 0.2);
  display: flex;
  justify-content: flex-end;
  flex-shrink: 0;
  height: 48rpx;
  min-height: 48rpx;
  max-height: 48rpx;
  box-sizing: border-box;
}

.char-count {
  font-size: 22rpx;
  color: #a69b8c;
  line-height: 1;
}

.index-footer {
  width: 100%;
  padding-top: 16rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  color: #5c4a3a;
  border: none;
  border-radius: 24px;
  padding: 26rpx 60rpx;
  font-size: 30rpx;
  font-weight: 500;
  width: 100%;
  max-width: 500rpx;
  margin: 0 auto;
  opacity: 0.5;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.2);
}

.submit-btn.active {
  opacity: 1;
  box-shadow: 0 6rpx 20rpx rgba(232, 213, 196, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.3);
}

.submit-btn[disabled] {
  opacity: 0.5;
}

.footer-hint {
  text-align: center;
  padding: 8rpx 0;
}

.hint-text {
  font-size: 22rpx;
  color: #a69b8c;
  opacity: 0.7;
}

/* 友好的加载提示 */
.loading-tip-section {
  margin-top: 20rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.loading-tip-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: 1px solid rgba(232, 213, 196, 0.3);
  box-shadow: 0 2rpx 12rpx rgba(232, 213, 196, 0.15);
}

.loading-tip-icon {
  font-size: 28rpx;
  animation: gentlePulse 2s ease-in-out infinite;
}

@keyframes gentlePulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.1);
  }
}

.loading-tip-text {
  font-size: 26rpx;
  color: #8b7355;
  line-height: 1.5;
  animation: textFade 0.5s ease;
}

@keyframes textFade {
  from {
    opacity: 0;
    transform: translateX(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

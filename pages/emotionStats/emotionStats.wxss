.stats-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 30rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(180deg, #faf8f5 0%, #f5f0ea 100%);
  overflow-y: auto;
}

.stats-content {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
  animation: gentleFloat 3s ease-in-out infinite;
}

@keyframes gentleFloat {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.empty-title {
  font-size: 36rpx;
  color: #5c4a3a;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #8b7355;
  line-height: 1.6;
  margin-bottom: 50rpx;
  max-width: 400rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  color: #5c4a3a;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.3);
}

.empty-btn:active {
  transform: scale(0.98);
}

/* 统计概览 */
.overview-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.overview-card {
  flex: 1;
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.15);
  border: 1px solid rgba(232, 213, 196, 0.3);
}

.overview-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.overview-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #8b7355;
  line-height: 1.4;
}

.overview-value {
  font-size: 40rpx;
  color: #5c4a3a;
  font-weight: 600;
  line-height: 1.2;
}

/* 情绪分布列表 */
.emotion-list-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 4rpx;
}

.title-text {
  font-size: 32rpx;
  color: #5c4a3a;
  font-weight: 600;
}

.title-hint {
  font-size: 22rpx;
  color: #a69b8c;
}

.emotion-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.emotion-item {
  background: linear-gradient(135deg, #ffffff 0%, #fff8f0 100%);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.1);
  border: 1px solid rgba(232, 213, 196, 0.3);
  transition: all 0.3s ease;
}

.emotion-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.15);
}

.emotion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.emotion-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.emotion-emoji {
  font-size: 40rpx;
}

.emotion-label {
  font-size: 30rpx;
  color: #5c4a3a;
  font-weight: 500;
}

.emotion-count {
  font-size: 26rpx;
  color: #8b7355;
  font-weight: 500;
}

.emotion-bar-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.emotion-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0e8dd;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.emotion-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #e8d5c4 0%, #d4c4b0 100%);
  border-radius: 8rpx;
  transition: width 0.6s ease;
  box-shadow: 0 2rpx 4rpx rgba(232, 213, 196, 0.3);
}

.emotion-percentage {
  font-size: 24rpx;
  color: #8b7355;
  min-width: 60rpx;
  text-align: right;
  font-weight: 500;
}

/* 温馨提示 */
.hint-section {
  margin-bottom: 40rpx;
}

.hint-card {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.8) 0%,
    rgba(250, 248, 245, 0.6) 100%
  );
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border: 1px solid rgba(232, 213, 196, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.1);
}

.hint-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.hint-text {
  flex: 1;
  font-size: 26rpx;
  color: #8b7355;
  line-height: 1.6;
}

/* 底部按钮 */
.stats-footer {
  width: 100%;
  padding-top: 20rpx;
  flex-shrink: 0;
}

.back-btn {
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  color: #5c4a3a;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 60rpx;
  font-size: 30rpx;
  font-weight: 500;
  width: 100%;
  max-width: 500rpx;
  margin: 0 auto;
  display: block;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.3);
}

.back-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.3);
}

.detail-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 30rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(180deg, #faf8f5 0%, #f5f0ea 100%);
  overflow-y: auto;
}

.detail-content {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

/* 时间信息 */
.time-section {
  margin-bottom: 30rpx;
}

.time-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(232, 213, 196, 0.15);
  border: 1px solid rgba(232, 213, 196, 0.3);
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: #8b7355;
  margin-bottom: 8rpx;
}

.time-value {
  display: block;
  font-size: 32rpx;
  color: #5c4a3a;
  font-weight: 500;
}

/* 通用标题 */
.section-title {
  font-size: 28rpx;
  color: #5c4a3a;
  margin-bottom: 20rpx;
  font-weight: 500;
  padding-left: 8rpx;
}

/* 用户输入 */
.input-section {
  margin-bottom: 30rpx;
}

.input-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1px solid #f0e8dd;
}

.input-text {
  font-size: 30rpx;
  color: #5c4a3a;
  line-height: 1.8;
}

/* 情绪标签 */
.emotions-section {
  margin-bottom: 30rpx;
}

.emotions-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.emotion-tag {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 28rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1px solid #f0e8dd;
}

.tag-emoji {
  font-size: 40rpx;
}

.tag-label {
  font-size: 28rpx;
  color: #5c4a3a;
}

/* 原因分析 */
.reasons-section {
  margin-bottom: 30rpx;
}

.reasons-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1px solid #f0e8dd;
}

.reason-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.7;
}

.reason-item:last-child {
  margin-bottom: 0;
}

.reason-dot {
  color: #e8d5c4;
  font-size: 32rpx;
  margin-right: 16rpx;
  font-weight: bold;
}

.reason-text {
  flex: 1;
  font-size: 28rpx;
  color: #5c4a3a;
  line-height: 1.7;
}

/* 非自责澄清 */
.clarification-section {
  margin-bottom: 30rpx;
}

.clarification-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-left: 6rpx solid #e8d5c4;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(232, 213, 196, 0.15);
}

.clarification-text {
  font-size: 30rpx;
  color: #5c4a3a;
  line-height: 1.8;
  font-weight: 500;
}

/* 行动建议 */
.actions-section {
  margin-bottom: 30rpx;
}

.actions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f0e8dd;
  transition: all 0.3s ease;
}

.action-item.completed {
  background: linear-gradient(135deg, #f5f0ea 0%, #fff8f0 100%);
  border-color: #e8d5c4;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.25);
  position: relative;
}

.action-item.completed::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #e8d5c4 0%, #d4c4b0 100%);
  border-radius: 16rpx 0 0 16rpx;
}

.action-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.action-emoji {
  font-size: 48rpx;
  flex-shrink: 0;
}

.action-text {
  flex: 1;
  font-size: 28rpx;
  color: #5c4a3a;
  line-height: 1.7;
}

.action-item.completed .action-text {
  color: #8b7355;
  font-weight: 500;
}

.action-check {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-check .check-icon {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.4);
}

.check-label {
  font-size: 22rpx;
  color: #8b7355;
  font-weight: 500;
}

/* 安抚语 */
.comfort-section {
  margin-bottom: 30rpx;
}

.comfort-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(232, 213, 196, 0.15);
  border: 1px solid rgba(232, 213, 196, 0.3);
}

.comfort-text {
  font-size: 30rpx;
  color: #5c4a3a;
  line-height: 1.8;
  font-weight: 500;
}

.detail-footer {
  width: 100%;
  padding-top: 20rpx;
  flex-shrink: 0;
}

.back-btn {
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  color: #5c4a3a;
  border: none;
  border-radius: 24px;
  padding: 26rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  max-width: 500rpx;
  margin: 0 auto;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.3);
}

.back-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.3);
}

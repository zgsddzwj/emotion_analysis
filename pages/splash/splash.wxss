.splash-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  padding-top: calc(60rpx + constant(safe-area-inset-top));
  padding-top: calc(60rpx + env(safe-area-inset-top));
  padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(135deg, #faf8f5 0%, #f5f0ea 50%, #faf8f5 100%);
  background-size: 200% 200%;
  animation: gradientShift 15s ease infinite;
  position: relative;
  overflow: hidden;
}

@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* 背景装饰圆形 */
.splash-container::before {
  content: "";
  position: absolute;
  top: -40%;
  right: -15%;
  width: 700rpx;
  height: 700rpx;
  background: radial-gradient(
    circle,
    rgba(232, 213, 196, 0.25) 0%,
    rgba(232, 213, 196, 0.1) 40%,
    transparent 70%
  );
  border-radius: 50%;
  animation: gentlePulse 8s ease-in-out infinite;
}

.splash-container::after {
  content: "";
  position: absolute;
  bottom: -25%;
  left: -10%;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(
    circle,
    rgba(232, 213, 196, 0.2) 0%,
    rgba(232, 213, 196, 0.08) 40%,
    transparent 70%
  );
  border-radius: 50%;
  animation: gentlePulse 10s ease-in-out infinite reverse;
}

@keyframes gentlePulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

/* 添加纹理效果 */
.splash-container {
  background-image: radial-gradient(
      circle at 20% 50%,
      rgba(232, 213, 196, 0.1) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 80%,
      rgba(232, 213, 196, 0.08) 0%,
      transparent 50%
    ),
    linear-gradient(135deg, #faf8f5 0%, #f5f0ea 50%, #faf8f5 100%);
}

.splash-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  min-height: 0;
  position: relative;
  z-index: 1;
  width: 100%;
}

.icon-wrapper {
  position: relative;
  margin-bottom: 50rpx;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeInDown 1s ease-out;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.main-icon {
  font-size: 140rpx;
  animation: gentleFloat 4s ease-in-out infinite;
  position: relative;
  z-index: 2;
  filter: drop-shadow(0 4rpx 12rpx rgba(232, 213, 196, 0.3));
}

@keyframes gentleFloat {
  0%,
  100% {
    transform: translateY(0) scale(1) rotate(0deg);
  }
  25% {
    transform: translateY(-12rpx) scale(1.05) rotate(-2deg);
  }
  50% {
    transform: translateY(-8rpx) scale(1.08) rotate(0deg);
  }
  75% {
    transform: translateY(-12rpx) scale(1.05) rotate(2deg);
  }
}

.icon-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: linear-gradient(
    135deg,
    rgba(232, 213, 196, 0.25) 0%,
    rgba(232, 213, 196, 0.08) 100%
  );
  animation: circlePulse 5s ease-in-out infinite;
  box-shadow: 0 0 40rpx rgba(232, 213, 196, 0.2);
}

@keyframes circlePulse {
  0%,
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.6;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.15);
    opacity: 0.3;
  }
}

.product-name {
  font-size: 56rpx;
  color: #5c4a3a;
  margin-bottom: 32rpx;
  font-weight: 500;
  letter-spacing: 6rpx;
  position: relative;
  animation: fadeInUp 1s ease-out 0.2s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.main-slogan {
  font-size: 36rpx;
  color: #5c4a3a;
  line-height: 1.7;
  margin-bottom: 50rpx;
  font-weight: 400;
  max-width: 500rpx;
  animation: fadeInUp 1s ease-out 0.4s both;
}

.daily-quote {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1px solid rgba(232, 213, 196, 0.4);
  border-radius: 18rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 30rpx;
  max-width: 520rpx;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.18);
}

.quote-icon {
  font-size: 30rpx;
}

.quote-text {
  font-size: 26rpx;
  color: #7a6a58;
  line-height: 1.6;
  text-align: left;
}

.sub-slogan {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
  width: 100%;
  max-width: 500rpx;
  animation: fadeInUp 1s ease-out 0.6s both;
}

.slogan-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 18rpx 28rpx;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.7) 0%,
    rgba(250, 248, 245, 0.5) 100%
  );
  border-radius: 28rpx;
  border: 1px solid rgba(232, 213, 196, 0.4);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.15);
  transition: all 0.3s ease;
  animation: slideInLeft 0.6s ease-out both;
}

.slogan-item:nth-child(1) {
  animation-delay: 0.7s;
}

.slogan-item:nth-child(2) {
  animation-delay: 0.8s;
}

.slogan-item:nth-child(3) {
  animation-delay: 0.9s;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.slogan-icon {
  font-size: 28rpx;
}

.slogan-text {
  font-size: 26rpx;
  color: #8b7355;
  font-weight: 400;
}

.warm-hint {
  margin-top: 20rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.85) 0%,
    rgba(250, 248, 245, 0.65) 100%
  );
  border-radius: 40rpx;
  border: 1px solid rgba(232, 213, 196, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.2);
  animation: fadeInUp 1s ease-out 1s both;
  position: relative;
  overflow: hidden;
}

.guide-section {
  margin-top: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1px solid rgba(232, 213, 196, 0.4);
  border-radius: 20rpx;
  padding: 18rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.12);
}

.guide-title {
  font-size: 26rpx;
  color: #7a6a58;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.guide-step {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #5c4a3a;
}

.step-icon {
  font-size: 26rpx;
}

.step-text {
  font-size: 26rpx;
}

.warm-hint::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

.hint-text {
  font-size: 24rpx;
  color: #8b7355;
  line-height: 1.6;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

.splash-footer {
  width: 100%;
  padding-bottom: 20rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.start-btn {
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  color: #5c4a3a;
  border: none;
  border-radius: 28rpx;
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 80%;
  max-width: 500rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(232, 213, 196, 0.4),
    0 0 0 0 rgba(232, 213, 196, 0.5);
  transition: all 0.3s ease;
  animation: fadeInUp 1s ease-out 1.2s both,
    buttonPulse 2s ease-in-out infinite 2s;
  position: relative;
  overflow: hidden;
}

@keyframes buttonPulse {
  0%,
  100% {
    box-shadow: 0 6rpx 20rpx rgba(232, 213, 196, 0.4),
      0 0 0 0 rgba(232, 213, 196, 0.5);
  }
  50% {
    box-shadow: 0 6rpx 20rpx rgba(232, 213, 196, 0.5),
      0 0 0 8rpx rgba(232, 213, 196, 0);
  }
}

.start-btn::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.start-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.start-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.3);
}

.btn-text {
  font-size: 32rpx;
  position: relative;
  z-index: 1;
}

.btn-arrow {
  font-size: 32rpx;
  transition: transform 0.3s ease;
  position: relative;
  z-index: 1;
}

.start-btn:active .btn-arrow {
  transform: translateX(6rpx);
}

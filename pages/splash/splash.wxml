<view class="splash-container">
  <view class="splash-content">
    <!-- 装饰性图标 -->
    <view class="icon-wrapper">
      <view class="main-icon">🌿</view>
      <view class="icon-circle"></view>
    </view>
    
    <!-- 产品名称 -->
    <view class="product-name">情绪记录本</view>
    
    <!-- 主标语 -->
    <view class="main-slogan">这里可以接住你的情绪</view>
    
    <!-- 副标语 -->
    <view class="sub-slogan">
      <view class="slogan-item">
        <text class="slogan-icon">✨</text>
        <text class="slogan-text">不评判</text>
      </view>
      <view class="slogan-item">
        <text class="slogan-icon">🔒</text>
        <text class="slogan-text">不记录隐私</text>
      </view>
      <view class="slogan-item">
        <text class="slogan-icon">💚</text>
        <text class="slogan-text">不说教</text>
      </view>
    </view>
    
    <!-- 温馨提示 -->
    <view class="warm-hint">
      <text class="hint-text">你的感受值得被看见</text>
    </view>
  </view>
  
  <view class="splash-footer">
    <button class="start-btn" bindtap="startTap">
      <text class="btn-text">开始说说看</text>
      <text class="btn-arrow">→</text>
    </button>
  </view>
</view>


.analysis-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 30rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background-color: #faf8f5;
  overflow-y: auto;
}

.analysis-content {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

/* 情绪标签区 */
.emotion-tags {
  margin-bottom: 40rpx;
}

.tag-title {
  font-size: 30rpx;
  color: #5c4a3a;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.emotion-tag {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx 28rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1px solid #f0e8dd;
}

.tag-emoji {
  font-size: 40rpx;
}

.tag-label {
  font-size: 28rpx;
  color: #5c4a3a;
}

/* 情绪来源解释 */
.reasons-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #5c4a3a;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.section-hint {
  font-size: 24rpx;
  color: #8b7355;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.reasons-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1px solid #f0e8dd;
}

.reason-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.7;
  align-items: flex-start;
}

.reason-item:last-child {
  margin-bottom: 0;
}

.reason-item.user-reason {
  position: relative;
  padding-right: 60rpx;
}

.reason-dot {
  color: #e8d5c4;
  font-size: 32rpx;
  margin-right: 16rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.reason-text {
  flex: 1;
  font-size: 28rpx;
  color: #5c4a3a;
  line-height: 1.7;
}

.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #a69b8c;
  line-height: 1;
  border-radius: 50%;
  background-color: #f5f0ea;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background-color: #e8d5c4;
  color: #8b7355;
}

.custom-reason-wrapper {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx dashed #e8d5c4;
}

.custom-reason-input {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e8d5c4;
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.15);
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.custom-reason-input:focus-within {
  border-color: #d4c4b0;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.25);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.custom-reason-input .reason-input {
  flex: 1;
  font-size: 28rpx;
  color: #5c4a3a;
  line-height: 1.6;
  background-color: transparent;
  border: none;
  padding: 0;
}

.custom-reason-input .reason-input::placeholder {
  color: #a69b8c;
}

.add-btn-wrapper {
  display: flex;
  justify-content: flex-end;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 18rpx 40rpx;
  font-size: 28rpx;
  color: #8b7355;
  background: linear-gradient(135deg, #f5f0ea 0%, #fff8f0 100%);
  border: 2rpx solid #e8d5c4;
  border-radius: 24rpx;
  min-width: 140rpx;
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.2);
  transition: all 0.3s ease;
}

.add-btn.active {
  color: #ffffff;
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  border-color: #d4c4b0;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.3);
}

.add-btn[disabled] {
  opacity: 0.6;
  background: linear-gradient(135deg, #f5f0ea 0%, #fff8f0 100%);
  color: #a69b8c;
  border-color: #f0e8dd;
  box-shadow: none;
}

.add-btn:active:not([disabled]) {
  transform: scale(0.96);
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.add-text {
  font-weight: 500;
}

/* 非自责澄清 */
.clarification-section {
  margin-bottom: 30rpx;
}

.clarification-box {
  background-color: #fff8f0;
  border-left: 6rpx solid #e8d5c4;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
}

.clarification-text {
  font-size: 30rpx;
  color: #5c4a3a;
  line-height: 1.7;
  font-weight: 500;
}

.analysis-footer {
  width: 100%;
  padding-top: 20rpx;
  flex-shrink: 0;
}

.next-btn {
  background-color: #e8d5c4;
  color: #5c4a3a;
  border: none;
  border-radius: 24px;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 80%;
  max-width: 500rpx;
  margin: 0 auto;
}

.next-btn:active {
  background-color: #d4c4b0;
}

.analysis-hint {
  text-align: center;
  font-size: 24rpx;
  color: #8b7355;
  margin-top: 16rpx;
  line-height: 1.5;
}

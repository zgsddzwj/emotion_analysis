.action-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 30rpx;
  padding-top: calc(40rpx + constant(safe-area-inset-top));
  padding-top: calc(40rpx + env(safe-area-inset-top));
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(180deg, #faf8f5 0%, #f5f0ea 100%);
  overflow-y: auto;
}

.action-content {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

/* 安抚性开场语 */
.comfort-section {
  margin-bottom: 40rpx;
}

.comfort-card {
  background: linear-gradient(135deg, #fff8f0 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.2);
  border: 1px solid rgba(232, 213, 196, 0.3);
  position: relative;
  overflow: hidden;
}

.comfort-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #e8d5c4 0%, #d4c4b0 100%);
}

.comfort-text {
  font-size: 32rpx;
  color: #5c4a3a;
  line-height: 1.8;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 微行动卡片 */
.actions-section {
  margin-bottom: 40rpx;
}

.action-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #f0e8dd;
  border-width: 2rpx;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
}

.action-card::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(
    90deg,
    rgba(232, 213, 196, 0.1) 0%,
    transparent 100%
  );
  transition: width 0.3s ease;
}

.action-card:active::before {
  width: 100%;
}

.action-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 选中状态 - 黄色背景 */
.action-card.completed {
  background: linear-gradient(135deg, #fff9e6 0%, #ffeaa7 100%) !important;
  border-color: #fdcb6e !important;
  border-width: 3rpx !important;
  box-shadow: 0 6rpx 24rpx rgba(253, 203, 110, 0.4) !important;
  position: relative;
}

.action-card.completed::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #fdcb6e 0%, #f39c12 100%);
  border-radius: 20rpx 0 0 20rpx;
}

.action-card:last-child {
  margin-bottom: 0;
}

.action-emoji-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fff8f0 0%, #f5f0ea 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border: 2rpx solid rgba(232, 213, 196, 0.3);
  transition: all 0.3s ease;
}

.action-emoji-wrapper.completed {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  border-color: #fdcb6e;
  box-shadow: 0 2rpx 8rpx rgba(253, 203, 110, 0.4);
}

.action-emoji {
  font-size: 48rpx;
  transition: all 0.3s ease;
}

.action-emoji-wrapper.completed .action-emoji {
  filter: brightness(1.1);
}

.action-text {
  flex: 1;
  font-size: 30rpx;
  color: #5c4a3a;
  line-height: 1.8;
  font-weight: 400;
  transition: all 0.3s ease;
}

.action-card.completed .action-text {
  color: #5c4a3a;
  font-weight: 600;
}

.action-card.completed .action-text::after {
  display: none;
}

/* 结束语 */
.ending-section {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 24rpx;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
}

.ending-text {
  display: block;
  font-size: 28rpx;
  color: #8b7355;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.selected-count-hint {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid rgba(232, 213, 196, 0.3);
}

.hint-text {
  display: block;
  font-size: 26rpx;
  color: #8b7355;
  line-height: 1.6;
  font-weight: 400;
  opacity: 0.8;
}

.action-footer {
  width: 100%;
  padding-top: 20rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.regenerate-btn {
  background: linear-gradient(135deg, #ffffff 0%, #faf8f5 100%);
  color: #8b7355;
  border: 2rpx solid #e8d5c4;
  border-radius: 20rpx;
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  flex: 1;
  line-height: 1.5;
  box-shadow: 0 4rpx 12rpx rgba(232, 213, 196, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.regenerate-btn:active {
  background: linear-gradient(135deg, #faf8f5 0%, #f5f0ea 100%);
  transform: scale(0.98);
}

.regenerate-btn[disabled] {
  opacity: 0.6;
}

.know-btn {
  background: linear-gradient(135deg, #e8d5c4 0%, #d4c4b0 100%);
  color: #5c4a3a;
  border: none;
  border-radius: 20rpx;
  padding: 22rpx 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  flex: 1;
  line-height: 1.5;
  box-shadow: 0 4rpx 16rpx rgba(232, 213, 196, 0.3);
}

.know-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(232, 213, 196, 0.3);
}

.record-btn {
  background-color: transparent;
  color: #8b7355;
  border: 2rpx solid #e8d5c4;
  border-radius: 20rpx;
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  flex: 1;
  line-height: 1.5;
}

.record-btn:active {
  background-color: rgba(232, 213, 196, 0.1);
  transform: scale(0.98);
}
